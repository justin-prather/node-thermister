{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "ES2022",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "composite": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": ["node"],
    "noEmit": true
  }
}
